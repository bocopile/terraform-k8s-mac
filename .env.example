# ===================================
# JIRA 설정
# ===================================
# JIRA 인스턴스 URL (필수)
JIRA_URL=https://your-company.atlassian.net

# JIRA 계정 이메일 (필수)
JIRA_EMAIL=your-email@company.com

# JIRA API 토큰 (필수)
# 생성 방법: https://support.atlassian.com/atlassian-account/docs/manage-api-tokens-for-your-atlassian-account/
JIRA_API_TOKEN=your-jira-api-token

# JIRA 프로젝트 키 (기본값: FINOPS)
JIRA_PROJECT_KEY=FINOPS

# ===================================
# Slack 설정
# ===================================
# Slack Webhook URL (필수)
# 생성 방법: https://api.slack.com/messaging/webhooks
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# Slack 채널 (기본값: #finops-dev)
SLACK_CHANNEL=#finops-dev

# Slack 사용자 이름 (기본값: Claude Code Bot)
SLACK_USERNAME=Claude Code Bot

# ===================================
# Git 설정
# ===================================
# Git 커밋 작성자 이름 (기본값: Claude Code)
GIT_AUTHOR_NAME=Claude Code

# Git 커밋 작성자 이메일 (기본값: claude@company.com)
GIT_AUTHOR_EMAIL=claude@company.com

# Git 메인 브랜치 이름 (기본값: main)
GIT_MAIN_BRANCH=main

# Git 스테이지 브랜치 이름 (기본값: stage)
GIT_STAGE_BRANCH=stage

# ===================================
# GitHub 설정
# ===================================
# GitHub Personal Access Token (선택)
# PR 생성 및 관리에 필요
# 생성 방법: https://github.com/settings/tokens
GITHUB_PERSONAL_ACCESS_TOKEN=ghp_your_github_token_here

# ===================================
# Redis 설정
# ===================================
# Redis 호스트 (기본값: localhost)
REDIS_HOST=localhost

# Redis 포트 (기본값: 6379)
REDIS_PORT=6379

# Redis 비밀번호 (선택, terraform variables.tf의 기본값: redispass)
REDIS_PASSWORD=redispass

# Redis 데이터베이스 번호 (기본값: 0)
REDIS_DB=0

# ===================================
# MySQL 설정 (Terraform 변수 참고)
# ===================================
# MySQL은 Terraform variables.tf에서 관리되지만 참고용으로 추가
# MYSQL_HOST=localhost
# MYSQL_PORT=3306
# MYSQL_USER=finalyzer
# MYSQL_PASSWORD=finalyzerpass
# MYSQL_DATABASE=finalyzer

# ===================================
# 워크플로우 설정
# ===================================
# 워크플로우 모드 (기본값: auto)
# 옵션: auto, manual, debug
WORKFLOW_MODE=auto

# 체크포인트 디렉토리 (기본값: ./checkpoints)
CHECKPOINT_DIR=./checkpoints

# 로그 레벨 (기본값: INFO)
# 옵션: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# ===================================
# 품질 게이트 설정
# ===================================
# 최소 코드 커버리지 (기본값: 80)
MIN_CODE_COVERAGE=80

# SonarQube URL (선택)
SONARQUBE_URL=

# SonarQube 토큰 (선택)
SONARQUBE_TOKEN=

# ===================================
# SubAgent 설정
# ===================================
# Backend Agent 활성화 (기본값: true)
BACKEND_AGENT_ENABLED=true

# QA Agent 활성화 (기본값: true)
QA_AGENT_ENABLED=true

# Review Agent 활성화 (기본값: true)
REVIEW_AGENT_ENABLED=true

# Docs Agent 활성화 (기본값: true)
DOCS_AGENT_ENABLED=true

# ===================================
# 테스트 설정
# ===================================
# 테스트 타임아웃 (초, 기본값: 300)
TEST_TIMEOUT=300

# 테스트 재시도 횟수 (기본값: 3)
TEST_RETRY_COUNT=3
